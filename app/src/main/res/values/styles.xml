<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:searchViewStyle">@style/SearchViewTheme</item>

    </style>

    <style name="myDialog" parent="Theme.AppCompat.Light.Dialog">
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="SearchViewTheme" parent="@style/Widget.AppCompat.Light.SearchView">
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewStyle</item>
    </style>

    <style name="AutoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupBackground">@drawable/searchview_suggestions_bg</item>
        <item name="android:popupElevation">0dp</item>
    </style>

    <style name="ToolbarBlackBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>
    <style name="ToolbarSubActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="SettingsDialog" parent="Theme.AppCompat.Light.Dialog">

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
