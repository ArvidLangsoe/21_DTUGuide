<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arvid.dtuguide">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.location"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- START Content Providers -->
        <provider
            android:authorities="com.arvid.dtuguide.RecentSearchSuggestionProvider"
            android:name=".RecentSearchSuggestionProvider" />
        <provider
            android:authorities="com.arvid.dtuguide.SearchSuggestionProvider"
            android:name=".SearchSuggestionProvider" />

        <!-- END Content Providers -->
        <activity android:name=".data.DataTestActivity" />
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Start Searchable Meta -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
            <meta-data
                android:name="android.app.searchable_rooms"
                android:resource="@xml/searchable_rooms"/>
            <!-- END Searchable Meta -->
        </activity>
        <activity
            android:name=".BottomNavigationActivity"
            android:label="@string/title_activity_bottom_navigation">

        </activity>
    </application>

</manifest>